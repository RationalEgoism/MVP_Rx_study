<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/ivCardPicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tvCardName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toEndOf="@id/ivCardPicture"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/ivCardPicture"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Name" />

            <TextView
                android:id="@+id/tvCardPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toEndOf="@id/ivCardPicture"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvCardName"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Name" />
        </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>